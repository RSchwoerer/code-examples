<Window x:Class="TabControlStyle.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Styling the TabControl"
        SizeToContent="WidthAndHeight">
   <Window.Resources>
      <Style TargetType="{x:Type Button}">
         <Setter Property="Margin" Value="5,3"/>
         <Setter Property="Padding" Value="3"/>
         <Setter Property="HorizontalContentAlignment" Value="Left"/>
      </Style>
   </Window.Resources>
   <StackPanel Margin="5">
      <Button x:Name="cmd1" Click="cmd1_Click" 
              Content="1. No style (colors only)"/>
      <Button x:Name="cmd2" Click="cmd2_Click" 
              Content="2. No style (sections)"
              ToolTip="(You don't really need to see this window.)"/>
      <Button x:Name="cmd3" Click="cmd3_Click" 
              Content="3. TabControl style"/>
      <Button x:Name="cmd4" Click="cmd4_Click" 
              Content="4. TabControl/TabItem styles"/>
      <Button x:Name="cmd5" Click="cmd5_Click" 
              Content="5. Triggers added"/>
   </StackPanel>
</Window>
