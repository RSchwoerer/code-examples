<Window x:Class="TabControlStyle.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Styling the TabControl"
        SizeToContent="WidthAndHeight">
   <Window.Resources>
      <Style TargetType="{x:Type Button}">
         <Setter Property="Margin" Value="5,3"/>
         <Setter Property="Padding" Value="3"/>
         <Setter Property="HorizontalContentAlignment" Value="Left"/>
      </Style>
   </Window.Resources>
   <StackPanel Margin="5">
      <Button x:Name="cmd1" Click="cmd1_Click" 
              Content="1. Base-style (ScrollableTabPanel)"
              ToolTip="This shows the TabControl at the end of part three." />
      <Button x:Name="cmd2" Click="cmd2_Click" 
              Content="2. TabItem Close Button"/>
   </StackPanel>
</Window>
